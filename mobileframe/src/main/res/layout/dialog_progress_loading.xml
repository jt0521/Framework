<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@drawable/bg_loading_333333_8d"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <com.mobileframe.widegt.LoadingView
        android:id="@+id/progress_bar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_loading_progress"
        app:frame_count="8"
        app:frame_interval="150" />

    <ImageView
        android:id="@+id/progress_bar_pure_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_loading_progress" />

    <TextView
        android:id="@+id/progress_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="请稍后..."
        android:textColor="@color/c_white"
        android:textSize="14dp" />

</LinearLayout>